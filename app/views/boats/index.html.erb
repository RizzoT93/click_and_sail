<div class='container w-75'>
  <div class="row">
    <% @boats.each do |boat| %>
    <div class="col d-f">
      <div class="card" style="width: 18rem;">
        <%= cl_image_tag boat.photo.key, crop: :fill, class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"> <%= boat.brand %></h5>
          <p class="card-text"> <%= boat.size %></p>
          <p class="card-text"> <%= boat.boat_type %></p>

      </div>
    </div>
    </div>
    <% end %>
  </div>
</div>



