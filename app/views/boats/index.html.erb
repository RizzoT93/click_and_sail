<div class="banner">
  <div class="banner-content text-center">
    <h1>Find your Boat here!</h1>
    <p>Chick and Sails makes it easy to find your fav boat!</p>
    <%= link_to "Start now", new_user_session_path, class: "btn btn-lg btn-primary"  %>
  </div>
</div>

<div class="banner">
</div>
<div class='container w-75 m-5 mx-auto'>
  <div class="row">
    <% @boats.each do |boat| %>
      <div class="col mb-3 d-flex float-left">
        <%= link_to boat_path(boat) do %>
          <div class="card" style="width: 18rem">
            <%= cl_image_tag boat.photo.key, crop: :fill, class: "card-img-top cards-img" %>
            <div class="card-body">
              <h5 class="card-title">Brand: <%= boat.brand %></h5>
              <p class="card-text"> Year: <%= boat.year %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
