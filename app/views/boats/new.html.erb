<div class="container-fluid d-flex justify-content-center bg-new p-2">
<div class="card w-25">
  <div class="card-body">
    <h2 class="card-title">Create a Boat</h2>
    <%= simple_form_for (@boat) do |f| %>

      <%= f.input :brand, class:'form-control'%>
      <%= f.input :boat_type, class:'form-control' %>
      <%= f.input :year, class:'form-control' %>
      <%= f.input :size, class:'form-control' %>
      <%= f.input :photo, as: :file, class:'form-control'%>

      <%= f.submit "Create!", class: "btn btn-primary"%>
    
    <% end %>
  </div>
</div>
</div>
